<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:padding="20px">

    <TextView
        android:id="@+id/ChoiceCS"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_rounded_border"
        android:gravity="center"
        android:text="Chọn cơ sở đào tạo"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ChoiceCS"
        tools:layout_editor_absoluteX="-18dp">

        <TextView
            android:id="@+id/loginwithGG"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="8dp"
            android:layout_marginRight="2px"
            android:layout_weight="1"
            android:background="@drawable/edittext_rounded_border"
            android:gravity="center"
            android:text="Google"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choiceCS"></TextView>

        <TextView
            android:layout_width="0px"
            android:layout_height="0px" />

        <TextView
            android:onClick="onLogin"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="2px"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_rounded_border"
            android:gravity="center"
            android:text="Login"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ChoiceCS"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:text="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:text="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:background="@drawable/edittext_rounded_border_input"
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:padding="10px"
        android:hint="email"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_rounded_border_input"
        android:ems="10"
        android:hint="pasword"
        android:inputType="textPassword"
        android:padding="10px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPassword" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="600px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/imglogin" />

</androidx.constraintlayout.widget.ConstraintLayout>